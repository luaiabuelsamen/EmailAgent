{
  "manifest_version": 3,
  "name": "Email Analysis Agent",
  "version": "1.0",
  "description": "AI-powered email analysis for Gmail",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "identity.email"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "${CHROME_CLIENT_ID}",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }
} 